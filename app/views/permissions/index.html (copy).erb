
<%= link_to '', new_permission_path, :title=>'Create New Pernission', :class => 'pull-right glyphicon glyphicon-plus' if current_user.super_admin? %>
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Data Table With Full Features</h3>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <div class="">
      <table id="example1" class="table table-bordered table-striped">
          <thead>
            <th>Subject Class</th>
            <th>Action Name</th>
            <th>Name</th>
            <th>Description</th>
            <th>Action</th>
            
          </thead>
          <tbody>
                <% @permissions.each do |permission| %>
                <tr>
                  <td>
                    <%= permission.subject_class %>
                  </td>
                  <td>
                    <%= permission.action %>
                  </td>
                  <td>
                    <%= permission.name %>
                  </td>
                  <td>
                    <%= permission.description %>
                  </td>
                  <td>
                    <%= link_to '', permission, :class => 'glyphicon glyphicon-eye-open', :title=>'View' %> | <%= link_to '', edit_permission_path(permission), :class => 'glyphicon glyphicon-pencil', :title=>'Edit Your Role'  %> | <%= link_to '', permission, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'glyphicon glyphicon-remove', :title=>'Delete Your Role' %>
                  </td>
                  
                </tr>
              <% end %>
          </tbody>

      </table>
    </div>  
  </div>
</div>  
